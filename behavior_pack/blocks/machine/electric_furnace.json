{
  "format_version": "1.21.80",
  "minecraft:block": {
    "description": {
      "identifier": "ic2:electric_furnace",
      "states": {
        "ic2:is_activated": [false, true]
      },
      "traits": {
        "minecraft:placement_direction": {
          "enabled_states": ["minecraft:cardinal_direction"],
          "y_rotation_offset": 180
        }
      },
      "menu_category": {
        "category": "construction",
        "group": "ic2:itemGroup.name.machine"
      }
    },
    "components": {
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 3.0
      },
      "minecraft:destructible_by_explosion": {
        "explosion_resistance": 10.0
      },
      "minecraft:loot": "loot_tables/machine/basic_drop.json",
      "minecraft:geometry": "minecraft:geometry.full_block",
      "minecraft:material_instances": {
        "*": {
          "texture": "ic2:general_machine_sides",
          "render_method": "opaque"
        },
        "south": {
          "texture": "ic2:machine_electric_furnace",
          "render_method": "opaque"
        },
        "up": {
          "texture": "ic2:machine_electric_furnace_top",
          "render_method": "opaque"
        },
        "down": {
          "texture": "ic2:general_machine_bottom",
          "render_method": "opaque"
        }
      },
      "ic2:enable_tick": true,
      "ic2:enable_interact": true,
      "minecraft:tick": {
        "looping": true,
        "interval_range": [1, 1]
      },
      "tag:script_data_driven": {},
      "tag:ic2:machine": {},
      "tag:ic2:cable_connectable": {},
      "tag:dismantlable": {},
      "tag:metal": {}
    },
    "permutations": [
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'south'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 0, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 180, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 90, 0]
          }
        }
      },
      {
        "condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, -90, 0]
          }
        }
      },
      {
        "condition": "q.block_state('ic2:is_activated') == false",
        "components": {
          "minecraft:light_emission": 0
        }
      },
      {
        "condition": "q.block_state('ic2:is_activated') == true",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "ic2:general_machine_sides",
              "render_method": "opaque"
            },
            "south": {
              "texture": "ic2:machine_electric_furnace_activated",
              "render_method": "opaque"
            },
            "up": {
              "texture": "ic2:machine_electric_furnace_top_activated",
              "render_method": "opaque"
            },
            "down": {
              "texture": "ic2:general_machine_bottom",
              "render_method": "opaque"
            }
          },
          "minecraft:light_emission": 0.5
        }
      }
    ]
  }
}
